{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext"],
		"module": "NodeNext",
		"rootDir": "./src",
		"outDir": "./dist",
		"importsNotUsedAsValues": "remove",
		"declaration": true,
		"sourceMap": true,
		"removeComments": true,
		"esModuleInterop": true,
		"moduleResolution": "NodeNext",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"resolveJsonModule": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["dist"]
}
