{
	"name": "{{kebab name}}",
	"version": "0.0.0",
	"description": "{{description}}",
	"license": "{{license}}",
	"author": "{{contact}}",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"prebuild": "npm run lint && npm run clean",
		"build": "tsc --build",
		"clean": "rimraf ./dist",
		"eslint": "eslint . --fix --ext .js,.ts,.mjs,.mts,.cjs,.cts,.tsx,.jsx",
		"lint": "npm run eslint && npm run prettier && npm run sort-package",
		"prettier": "prettier . --write",
		"release": "release-it",
		"sort-package": "sort-package-json",
		"pretest": "npm run lint",
		"test": "echo \"No test specified\" && exit 1",
		"prewatch": "npm run lint && npm run clean",
		"watch": "tsc --watch"
	},
	"devDependencies": {
		"@types/node": "^18.11.18",
		"@typescript-eslint/eslint-plugin": "^5.50.0",
		"@typescript-eslint/parser": "^5.50.0",
		"eslint": "^8.33.0",
		"prettier": "^2.8.3",
		"release-it": "^15.6.0",
		"rimraf": "^4.1.2",
		"sort-package-json": "^2.4.0",
		"typescript": "^4.9.5"
	},
	"publishConfig": {
		"access": "public"
	}
}
