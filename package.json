{
	"name": "@aarond309/create-ts",
	"version": "1.0.1",
	"description": "Create a TypeScript package in one command",
	"license": "MIT",
	"author": "aarondill <aaronsacks2006@gmail.com>",
	"type": "module",
	"bin": "dist/cli.js",
	"files": [
		"dist",
		"templates"
	],
	"scripts": {
		"prebuild": "npm run lint && npm run clean",
		"build": "tsc --build",
		"clean": "rimraf ./dist",
		"dev": "npm run clean && tsc --watch",
		"eslint": "eslint . --fix --ext .js,.ts,.mjs,.mts,.cjs,.cts,.tsx,.jsx",
		"prelint": "npm run clean",
		"lint": "npm run eslint && npm run prettier && npm run sort-package",
		"prepublishOnly": "npm run clean && npm run build",
		"prettier": "prettier . --write",
		"release": "release-it",
		"sort-package": "sort-package-json",
		"pretest": "npm run lint",
		"test": "echo \"No test specified\" && exit 1",
		"prewatch": "npm run lint && npm run clean",
		"watch": "tsc --watch"
	},
	"dependencies": {
		"create-create-app": "github:aarondill/create-create-app",
		"globby": "^13.1.3",
		"hasbin": "^1.2.3",
		"sort-package-json": "^2.4.0",
		"ts-dedent": "^2.2.0"
	},
	"devDependencies": {
		"@types/hasbin": "^1.2.0",
		"@types/node": "^17.0.45",
		"@typescript-eslint/eslint-plugin": "^5.50.0",
		"@typescript-eslint/parser": "^5.50.0",
		"eslint": "^8.33.0",
		"prettier": "^2.8.3",
		"release-it": "^15.6.0",
		"rimraf": "^4.1.2",
		"sort-package-json": "^2.4.0",
		"tsup": "^5.12.9",
		"type-fest": "^3.5.5",
		"typescript": "^4.9.5"
	},
	"publishConfig": {
		"access": "public"
	}
}
